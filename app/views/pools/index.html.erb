<div class="container mt-3">
  <div id="map"
      class="rounded"
       style="width: 100%; height: 500px"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


  <div class="card-product mt-5">
  <% @pools.each do |pool| %>
    <div class="card-product-infos text-justify" >
      <h2 ><%= pool.title  %></h2>
      <p style="color:#c9cfed"><%= pool.description  %></p>
      <%= link_to "See more", pool_path(pool), class: "btn btn-ghost-light btn-block mt-3 mb-5"  %>
    </div>
  <% end %>
  </div>
</div>


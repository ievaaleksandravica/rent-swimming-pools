<div class="container">
  <div class="border-bottom">
    <div class="row">
       <div class="col-sm">

      </div>
      <div class="col-sm mt-3">

      </div>
    </div>
</div>


  <div class="row">
    <div class="col-sm mt-3" style="color:#c9cfed;">
     <div class=border-bottom>
     <%= simple_form_for [@pool, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit class: "mb-3 btn-ghost-light btn-block" %>
<% end %>
        <% if @bookings.length > 0 %>
          <p class="mt-3" style="color:#c9cfed;">ðŸŽ‰ This swimming pool is currently booked off on the following dates
        </p>
        <ul style="color:#c9cfed">
          <% @bookings.each do |booking| %>
            <li> <%= booking.start_date %> - <%= booking.end_date %></li>
          <% end %>
        </ul>
        <% else %>
        <% end %>
</div>

<div class="mt-3">
    <h2><%= @pool.title  %> </h2>
    <p class="border-bottom pb-3 mb-3"> <%= @pool.description %>  </p>
    <p><i class="fas fa-map-marker-alt"></i>  <%= @pool.address  %> </p>
    <p><i class="fas fa-font"></i> <%= @pool.category  %> </p>
    <p><i class="fas fa-square-root-alt"></i> <%= @pool.qm  %> ãŽ¡ </p>
    <p><i class="fas fa-euro-sign"></i>  <%= @pool.price_per_day  %> per day </p>
    <p><i class="fas fa-user-friends"></i> max <%= @pool.max_capacity  %> people </p>
    <p class="border-bottom pb-3 mb-3"><i class="fas fa-at"></i> <%= @pool.user.first_name  %> <%= @pool.user.last_name  %> </p>

  </div>

    </div>
    <div class="col-sm">
    <% @pool.photos.each do |photo| %>
      <div class="card-trip rounded">
         <%= cl_image_tag photo.key%>
    </div>
    <% end %>
<% if @pool.latitude %>
<div id="map"
     style="width: 100%; height: 300px;"
     class="mt-3"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
<% end %>
     </div>
  </div>
















<% if @bookings.length > 0 %>

<div class="flash flash-success alert alert-dismissible fade show" role="alert">
